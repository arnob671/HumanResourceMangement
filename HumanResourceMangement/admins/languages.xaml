      xmlns:local="clr-namespace:admins"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="job_categories">

    <Grid>
        <Frame x:Name="frame" Content="" HorizontalAlignment="Left" Height="121" Margin="3,4,0,0" VerticalAlignment="Top" Width="569" Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" Navigated="frame_Navigated"/>
