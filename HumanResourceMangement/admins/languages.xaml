        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="16,208,0,0" VerticalAlignment="Top" Height="166" Width="546"/>
        <Button x:Name="button" Content="Add" HorizontalAlignment="Left" Margin="15,144,0,0" VerticalAlignment="Top" Width="75" Height="34" FontWeight="Bold" FontSize="16" Click="button_Click"/>
        <Button x:Name="button1" Content="Delete" HorizontalAlignment="Left" Margin="115,142,0,0" VerticalAlignment="Top" Width="75" Height="34" FontWeight="Bold" FontSize="16" Click="button1_Click"/>
        <Label x:Name="label1" Content="Name" HorizontalAlignment="Left" Margin="21,45,0,0" VerticalAlignment="Top" Width="74" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
